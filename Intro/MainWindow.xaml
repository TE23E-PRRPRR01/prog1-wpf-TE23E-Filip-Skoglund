<Window x:Class="Intro.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:Intro"
    mc:Ignorable="d"
    Title="Mitt Första fönsterprogram" Height="450" Width="600"
    MinHeight="250" MinWidth="600"
    SizeToContent="WidthAndHeight"
    Background="#581845">
    <StackPanel Margin="10">
        <Label Margin="5" FontSize="100" FontWeight="bold">Hej Världen</Label>
        <StackPanel Orientation="Horizontal">
            <Label>Ange namn:</Label>
            <TextBox Margin="5" Height="20"></TextBox>
        </StackPanel>
    <Button
            Margin="5" Content="Klicka här" Background="#f642c1"></Button>
    </StackPanel>
</Window>