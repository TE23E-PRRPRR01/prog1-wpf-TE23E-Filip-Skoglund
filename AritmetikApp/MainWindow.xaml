<Window x:Class="AritmetikApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:AritmetikApp" mc:Ignorable="d" Title="AritmetikApp" Height="450" Width="800" SizeToContent="WidthAndHeight" Background="LightGray">
    <StackPanel Background="White" Margin="10">
        <Label Margin="5" FontSize="30" FontWeight="Bold">Aritmetiken</Label>
        <Label Margin="5" FontSize="10" FontWeight="Bold">Tal 1:</Label>
        <TextBox Margin="5" Name="tbxTal1"></TextBox>
        <Label Margin="5" FontSize="10" FontWeight="Bold">Operator (+, -, *, /):</Label>
        <TextBox Margin="5" Name="tbxOperator"></TextBox>
        <Label Margin="5" FontSize="10" FontWeight="Bold">Tal 2:</Label>
        <TextBox Margin="5" Name="tbxTal2"></TextBox>
        <Button Margin="5" Click="KlickBeräkna">Beräkna</Button>
        <Label Margin="5" FontSize="20" FontWeight="Bold" Name="lblResultat"></Label>
    </StackPanel>
</Window>
