<Window x:Class="EventApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:EventApp" mc:Ignorable="d"
    Height="450" Width="800"
    MinWidth="200"
    SizeToContent="WidthAndHeight" ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
    Title="-"
    Background="LightGray">
    <StackPanel Margin="10">
        <Label>Ange en text:</Label>
        <TextBox Name="tbxText" Height="50" Width="180" Margin="5" TextWrapping="Wrap"></TextBox>
        <Button Click="KlickOk" Margin="5" Padding="10" Background="LimeGreen" Foreground="White">Ok</Button>
        <Button Click="KlickAvbryt" Margin="5" Padding="10" Background="Red" Foreground="White">Avbryt</Button>
    </StackPanel>
</Window>