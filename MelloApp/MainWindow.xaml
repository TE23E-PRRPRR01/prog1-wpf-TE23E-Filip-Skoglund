<Window x:Class="MelloApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:MelloApp" mc:Ignorable="d" Title="Omröstning" MinHeight="300" Width="350" Background="Cyan" SizeToContent="WidthAndHeight" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <StackPanel Margin="20">
        <Image Source="./bilder/mello-logo.png" Width="200" Margin="0,0,0,10"></Image>
        <Label FontSize="22">Vilken är din favoritlåt?</Label>

        <Button Name="röd" Click="KlickRöst" Height="30" Background="Red" Foreground="White" Margin="5" FontWeight="Bold">Röd</Button>
        <Button Name="blå" Click="KlickRöst" Height="30" Background="Blue" Foreground="White" Margin="5" FontWeight="Bold">Blå</Button>
        <Button Name="grön" Click="KlickRöst" Height="30" Background="Green" Foreground="White" Margin="5" FontWeight="Bold">Grön</Button>
        <Button Name="gul" Click="KlickRöst" Height="30" Background="Yellow" Foreground="White" Margin="5" FontWeight="Bold">Gul</Button>
        <Button Name="lila" Click="KlickRöst" Height="30" Background="Purple" Foreground="White" Margin="5" FontWeight="Bold">Lila</Button>



        <TextBox Name="tbxResultat" IsReadOnly="true" Height="25" TextAlignment="Center" FontWeight="Bold" Margin="10">Röd: 0, Blå: 0, Grön: 0, Gul: 0, Lila: 0</TextBox>

        <Button Click="KlickÅterställ" Background="DarkGray" Foreground="DarkRed" Height="20" Width="150">Nollställ röster</Button>
    </StackPanel>
</Window>
