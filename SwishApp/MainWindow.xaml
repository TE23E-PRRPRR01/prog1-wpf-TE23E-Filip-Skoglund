<Window x:Class="SwishApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:SwishApp" mc:Ignorable="d" Title="Swish" Height="450" Width="800" MinWidth="250" SizeToContent="WidthAndHeight" Background="LightGray">
    <StackPanel Margin="10" Background="White">
        <Label Margin="10" FontSize="30" FontWeight="Bold">SWISH</Label>
        <Label Margin="3" FontSize="15" FontWeight="Bold">Kontobalans:</Label>
        <TextBox Margin="3" FontSize="18" Name="tbxSaldo"></TextBox>
        <Label Margin="3" FontSize="15" FontWeight="Bold">Önskat belopp:</Label>
        <TextBox Margin="3" FontSize="18" Name="tbxÖnskat"></TextBox>
        <Button Margin="3" FontSize="18" Click="KlickaSwisha">Swisha</Button>
        <Label Margin="5" FontSize="15" FontWeight="Bold" Name="lblOutput"></Label>
    </StackPanel>
</Window>
