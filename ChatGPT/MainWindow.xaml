<Window x:Class="ChatGPT.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:ChatGPT" mc:Ignorable="d" Title="MainWindow" Height="450" Width="800" Background="LightGray">
    <StackPanel Margin="10" Background="White">
        <Label FontSize="20" FontWeight="Bold">AI Chatt App</Label>
        <TextBox Name="txbPrompt" Height="100" Margin="10" Padding="10"></TextBox>
        <Button Click="KlickaSkicka" Margin="10" Padding="10">Skicka</Button>
        <TextBox Name="txbSvar" Height="300" Margin="10" Padding="10" IsReadOnly="true" VerticalScrollBarVisibility="auto" TextWrapping="Wrap"></TextBox>
    </StackPanel>
</Window>
