<Window x:Class="JulklappApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:JulklappApp" mc:Ignorable="d" Title="MainWindow" Height="450" Width="800" SizeToContent="WidthAndHeight">
    <StackPanel Margin="10">
        <Label FontSize="30" FontWeight="Bold">Julklappslistan</Label>

        <StackPanel Name="stpMax" Orientation="Horizontal" Margin="10">
            <Label Margin="5">Antal julklappar:</Label>
            <TextBox Name="txbAntal" Width="100" Margin="5"></TextBox>
            <Button Click="KlickAnge" Width="75" Margin="5">Ange</Button>
        </StackPanel>

        <StackPanel Name="stpInmatning" Orientation="Horizontal" Margin="10">
            <Label FontWeight="Bold" FontSize="14" Margin="5">Julklapp:</Label>
            <TextBox Name="txbJulklapp" Width="100" Height="25" Margin="5"></TextBox>
            <Label FontWeight="Bold" FontSize="14" Margin="5">Mottagare:</Label>
            <TextBox Name="txbMottagare" Width="100" Height="25" Margin="5"></TextBox>
            <Button Click="KlickLäggTill" Width="75" Height="25" Margin="5">Lägg till</Button>
            <Button Click="KlickBytUt" Width="75" Height="25" Margin="5">Byt ut</Button>
        </StackPanel>

        <StackPanel Name="stpListan" Margin="10">
            <Label FontWeight="Bold" FontSize="14" Margin="5">Julklappar:</Label>
            <ListBox Name="lsbJulklappar" Height="120" Margin="5"></ListBox>
        </StackPanel>

        <TextBox Name="txbStatus" Margin="10"></TextBox>
    </StackPanel>
</Window>
