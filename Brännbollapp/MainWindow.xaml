<Window x:Class="Brännbollapp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:Brännbollapp" mc:Ignorable="d" Title="MainWindow" Height="450" Width="800" SizeToContent="WidthAndHeight">
    <StackPanel Margin="10">
        <Label FontSize="30">Bränbollsräknaren</Label>
        <StackPanel Orientation="Horizontal" Margin="10">
            <Label>Lag inne:</Label>
            <TextBox Name="txbInne" Width="75"></TextBox>
            <Label>Lag Ute:</Label>
            <TextBox Name="txbUte" Width="75"></TextBox>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="10">
            <Button Click="KlickFrivarv" Width="100" Height="30" Margin="5">Frivarv</Button>
            <Button Click="KlickBränn" Width="100" Height="30" Margin="5">Bränning</Button>
            <Button Click="KlickLyra" Width="100" Height="30" Margin="5">Lyra</Button>
            <Button Click="KlickVarv" Width="100" Height="30" Margin="5">Varv</Button>
        </StackPanel>
        <Label>Historik</Label>
        <TextBox Name="txbHistory" IsReadOnly="true" Width="450" Height="200"></TextBox>
    </StackPanel>
</Window>
